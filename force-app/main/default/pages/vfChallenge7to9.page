<!-- Coding Challenge 7 to 8 -->
<apex:page standardController="Account" recordSetVar="accs" extensions="vfChallenge7to9Controller">
    <apex:form>
        <apex:pageBlock>
            <apex:pageBlockSection>
                <apex:outputLabel value="Enter an Account Name" />
                <apex:inputText value="{!nameOfAcc}" />
            </apex:pageBlockSection>

            <apex:pageBlockButtons>
                <apex:commandButton value="Search" action="{!searchAcc}" />
            </apex:pageBlockButtons>

            <apex:repeat value="{!accList}" var="acc">
                <apex:outputText value="{!acc.Name}" id="theName"/>
                <br/>
                <apex:repeat value="{!acc.Contacts}" var="con">
                    <apex:outputText value="{!con.Name}" id="theContact"/>

                </apex:repeat>
            </apex:repeat>
    </apex:form>
</apex:page>